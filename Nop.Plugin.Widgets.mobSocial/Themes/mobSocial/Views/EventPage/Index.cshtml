            <div class="send-pm-box">
                <span class="ui-icon ui-icon-mail-closed"></span>
                @Html.RouteLink(T("MobSocial.MessageButtonText").Text, "SendPM", new { toCustomerId = Model.CustomerProfileId }, new { @class = "friend-button" })
