@model Nop.Plugin.Widgets.MobSocial.Models.EventPageModel

@using Nop.Web.Framework.UI
@{
    Layout = "~/Views/Shared/_ColumnsThree.cshtml";
    Html.AddTitleParts(T("PageTitle.Profile").Text);
}

@section left {

   
        @foreach(var hotel in Model.Hotels)
        { 
            
            <div class="hotel-information-block">
                <span class="title">hotel.Title</span>
                <br /><br />
                <div class="hotel-information">
                    <span class="label">hotel.Name</span><br />
                    <span class="value">hotel.Address1</span>
                    if(string.IsNullOrEmpty(hotel.Address2))
                    {
                        <span class="value"> hotel.Address2</span>
                    }
                    <br />
                    <span class="value">hotel.City, hotel.State hotel.ZipPostalCode</span><br />
                    <span class="value">hotel.PhoneNumber</span><br />
                </div>
            </div>
            <br /><br />        
        }
}


<div class="page profile-page">

    <div class="clear">
    </div>
    <div class="profile-left">

        @Html.Action("ProfilePicture", "MobSocial", new { customerId = Model.CustomerProfileId })

