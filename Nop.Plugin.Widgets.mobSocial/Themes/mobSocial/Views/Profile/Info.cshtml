@model ProfileInfoModel
@using Nop.Web.Models.Profile;
@using Nop.Web.Models.Customer;
<style type="text/css">
    .ui-widget-header {
        background: white;
        border-top: none;
        border-right: none;
        border-bottom: 1px solid #aaaaaa;
        border-left: none;
        border-bottom-left-radius: 0px;
        border-bottom-right-radius: 0px;
    }

    .ui-widget-content {
        border: none;
    }

    .ui-page-body {
        margin-top: 0px;
    }

    .profile-page .profile-info-box {
        background: none;
    }

    .ui-tabs .ui-tabs-nav {
        padding: 0px 0px 0px 0px !important;
    }
</style>

<div class="profile-info-box">

    Room name
    <input id="broadcastName" type="hidden" value="myRoom" /><br />

    <!-- Patent for streaming video to social network profiles, events, business pages, or any social network screen -->
    <div id="videoMessage" style="
    position: absolute;
    top: 784px;
    left: 460px;
    font-size: 1.5em;
    text-align: center;
    font-weight: bold;
    color: rgb(208, 208, 208);
    cursor: pointer;
">Bruce is now broadcasting!<br>Click to watch<br />Sign in to watch</div>
    <br /><br /><br /><br /><br /><br /><br /><br />
    <div id="profileVideoStream" style="
    width:300px; height:300px;
    border: 1px solid black;
    background-color: transparent;
    cursor: pointer;
"></div>

    <button id="viewBroadcast">View Broadcast</button><br /><br />



    @if (Model.LocationEnabled)
    {
        <div class="profile-stat">
            @T("Profile.Country"): <span class="profile-stat-value">@Model.Location</span>
        </div>
    }

    @Html.Widget("profile_page_info_userdetails")



    @if (Model.TotalPostsEnabled)
    {
        <div class="profile-stat">
            @T("Profile.TotalPosts"): <span class="profile-stat-value">@Model.TotalPosts</span>
        </div>
    }
    @if (Model.JoinDateEnabled)
    {
        <div class="profile-stat">
            @T("Profile.JoinDate"): <span class="profile-stat-value">@Model.JoinDate</span>
        </div>
    }
    @if (Model.DateOfBirthEnabled)
    {

        var bday = DateTime.Parse(Model.DateOfBirth).ToString("MMMM dd");


        <div class="profile-stat">
            @T("Profile.DateOfBirth"): <span class="profile-stat-value">@bday</span>
        </div>
    }
    @Html.Widget("profile_page_info_userstats")

    <div class="clear">
    </div>


</div>

@{
    Html.AddScriptParts("~/Plugins/Widgets.mobSocial/Content/mobSocial/RTCMultiConnection.js");
    Html.AddScriptParts("~/Plugins/Widgets.mobSocial/Content/mobSocial/jquery.signalr-1.2.2.js");
    Html.AddScriptParts("~/signalr/hubs");
    Html.AddScriptParts("~/Plugins/Widgets.mobSocial/Content/mobSocial/mob-video.js");
}


