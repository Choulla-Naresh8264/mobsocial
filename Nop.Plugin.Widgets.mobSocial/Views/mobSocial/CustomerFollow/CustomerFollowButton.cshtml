<div ng-switch on="FollowStatus">
    <div ng-switch-when="false">
        <a class="button-primary" ng-click="Follow()">
            Follow
        </a>
    </div>
    <div ng-switch-when="true">
        <a class="button-primary" ng-click="Unfollow()">
            Unfollow
        </a>
    </div>
</div>